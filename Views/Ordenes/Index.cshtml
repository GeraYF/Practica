@model Practica.Models.OrdenesViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Operar en Bolsa</title>
</head>
<body>
    <h1>Operar en Bolsa</h1>
    <form asp-action="CrearOrden" method="post">
        <div>
            <label for="NombreCompleto">Nombre y Apellido:</label>
            <input type="text" id="NombreCompleto" name="NombreCompleto" value="@Model.NombreCompleto" />
            @Html.ValidationMessageFor(m => m.NombreCompleto)
        </div>

        <div>
            <label for="Email">Correo electrónico:</label>
            <input type="text" id="Email" name="Email" value="@Model.Email" />
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div>
            <label for="FechaOperacion">Fecha de Operación:</label>
            <input type="date" id="FechaOperacion" name="FechaOperacion" value="@Model.FechaOperacion.ToString("yyyy-MM-dd")" />
            @Html.ValidationMessageFor(m => m.FechaOperacion)
        </div>

        <div>
            <label>Instrumentos:</label>
            <div>
                <input type="checkbox" id="SP500" name="InstrumentosSeleccionados" value="S&P 500" />
                <label for="SP500">S&P 500</label>
            </div>
            <div>
                <input type="checkbox" id="DowJones" name="InstrumentosSeleccionados" value="Dow Jones" />
                <label for="DowJones">Dow Jones</label>
            </div>
            <div>
                <input type="checkbox" id="BonosUS" name="InstrumentosSeleccionados" value="Bonos US" />
                <label for="BonosUS">Bonos US</label>
            </div>
            @Html.ValidationMessageFor(m => m.InstrumentosSeleccionados)
        </div>

        <div>
            <label for="MontoAbonar">Monto Abonar:</label>
            <input type="number" id="MontoAbonar" name="MontoAbonar" step="0.01" value="@Model.MontoAbonar" />
            @Html.ValidationMessageFor(m => m.MontoAbonar)
        </div>

        <button type="submit">Invertir</button>
    </form>
</body>
</html>
